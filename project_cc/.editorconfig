###############################################################################
# The Content Creator (CC)
# EditorConfig â€” Canonical
#
# This file enforces formatting consistency across all editors and IDEs.
# It is non-optional and enforced in CI where applicable.
###############################################################################

# Top-level EditorConfig file
root = true

###############################################################################
# Global Defaults
###############################################################################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

###############################################################################
# Markdown
###############################################################################
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

###############################################################################
# YAML / YML (Contracts, CI, Config)
###############################################################################
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

###############################################################################
# JSON (Schemas, n8n exports, fixtures)
###############################################################################
[*.json]
indent_size = 2

###############################################################################
# JavaScript / TypeScript
###############################################################################
[*.js]
indent_size = 2

[*.ts]
indent_size = 2

###############################################################################
# Shell Scripts
###############################################################################
[*.sh]
indent_size = 2

###############################################################################
# Python (Tooling / Scripts)
###############################################################################
[*.py]
indent_size = 4
max_line_length = 88

###############################################################################
# HTML / TXT (Email templates)
###############################################################################
[*.html]
indent_size = 2

[*.txt]
indent_size = 2
trim_trailing_whitespace = false

###############################################################################
# Environment Examples
###############################################################################
[*.env]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

###############################################################################
# Makefiles (Tabs are required)
###############################################################################
[Makefile]
indent_style = tab

###############################################################################
# End of File
###############################################################################

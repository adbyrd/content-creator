###############################################################################
# The Content Creator (CC)
# Environment Variable Template
#
# This file documents REQUIRED environment variables only.
# Copy to `.env` locally and populate via your secrets manager.
#
# NEVER commit real values.
###############################################################################

###############################################################################
# Environment Identity
###############################################################################

# Allowed values: dev | prod
CC_ENV=

# Human-readable identifier for logs and traces
CC_ENV_NAME=

###############################################################################
# HubSpot (System of Record / Memory)
###############################################################################

# Base API URL (do not change unless HubSpot changes)
HUBSPOT_BASE_URL=https://api.hubapi.com

# Private App Token (SCOPED, ENV-SPECIFIC)
# Required scopes are documented in /contracts/hubspot/
HUBSPOT_PRIVATE_APP_TOKEN=

# HubSpot Account ID (used for sanity checks + audit logs)
HUBSPOT_ACCOUNT_ID=

###############################################################################
# n8n (Workflow Operator)
###############################################################################

# n8n instance base URL
N8N_BASE_URL=

# n8n API key (read/write workflows, executions)
N8N_API_KEY=

# Execution environment identifier (dev/prod)
N8N_ENVIRONMENT=

###############################################################################
# Email Delivery (Postmark)
###############################################################################

# Postmark server token (ENV-SPECIFIC)
POSTMARK_SERVER_TOKEN=

# Default "From" email address
POSTMARK_FROM_EMAIL=

# Message stream name (e.g. outbound, transactional)
POSTMARK_MESSAGE_STREAM=

###############################################################################
# AI / Generation Vendors
###############################################################################

# OpenAI API key (content generation)
OPENAI_API_KEY=

# OpenAI organization ID (optional, but recommended)
OPENAI_ORG_ID=

# ElevenLabs API key (voice, if enabled)
ELEVENLABS_API_KEY=

# Creatomate API key (video rendering, if enabled)
CREATOMATE_API_KEY=

###############################################################################
# Web Intake (WIX / Skool)
###############################################################################

# Shared secret for verifying inbound WIX webhooks
WIX_WEBHOOK_SECRET=

# Shared secret for Skool membership verification (if applicable)
SKOOL_WEBHOOK_SECRET=

###############################################################################
# Content & Delivery Controls
###############################################################################

# Hard stop switch for outbound delivery
# Allowed values: true | false
CC_DELIVERY_ENABLED=

# Maximum retries for delivery attempts
CC_MAX_DELIVERY_RETRIES=

# Backoff strategy (e.g. exponential, fixed)
CC_RETRY_STRATEGY=

###############################################################################
# Observability & Logging
###############################################################################

# Log level: debug | info | warn | error
LOG_LEVEL=

# External log sink (optional)
LOG_SINK_URL=

###############################################################################
# Rate Limiting & Safety
###############################################################################

# Global API rate limit ceiling (per minute)
CC_GLOBAL_RATE_LIMIT=

# Vendor-specific override (optional)
OPENAI_RATE_LIMIT=
POSTMARK_RATE_LIMIT=

###############################################################################
# Feature Flags (Documented in /config/feature-flags.yaml)
###############################################################################

# Enable/disable experimental generation paths
FEATURE_EXPERIMENTAL_GENERATION=

# Enable/disable voice/video generation
FEATURE_MEDIA_GENERATION=

###############################################################################
# End of File
###############################################################################
